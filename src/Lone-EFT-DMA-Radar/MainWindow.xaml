<Window x:Class="LoneEftDmaRadar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoneEftDmaRadar"
        xmlns:vm="clr-namespace:LoneEftDmaRadar"
        xmlns:tabs="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
        mc:Ignorable="d"
        Title="Lone EFT DMA Radar"
        Width="1280" Height="720"
        Icon="/lone-icon.ico">
    <d:Window.DataContext>
        <d:DesignInstance Type="{x:Type vm:MainWindowViewModel}"
                      IsDesignTimeCreatable="False"/>
    </d:Window.DataContext>
    <Grid>
        <TabControl Margin="0">
            <TabItem Header="Radar"
                     x:Name="RadarTab">
                <tabs:RadarTab x:Name="Radar" />
            </TabItem>
            <TabItem Header="Settings">
                <tabs:SettingsTab x:Name="Settings" />
            </TabItem>
            <TabItem Header="Web Radar">
                <tabs:WebRadarTab x:Name="WebRadar" />
            </TabItem>
            <TabItem Header="Player History">
                <tabs:PlayerHistoryTab x:Name="PlayerHistory"/>
            </TabItem>
            <TabItem Header="Player Watchlist">
                <tabs:PlayerWatchlistTab x:Name="PlayerWatchlist"/>
            </TabItem>
            <TabItem Header="Loot Filters">
                <tabs:LootFiltersTab x:Name="LootFilters"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
